{
  "name": "api-boilerplate",
  "version": "1.6.5",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev:queue": "tsx watch --ignore ./node_modules src/infra/queue/index.ts",
    "dev:server": "tsx watch --ignore ./node_modules src/infra/cluster.ts",
    "build": "tsup src",
    "prestart": "yarn prisma migrate deploy",
    "start:server": "NODE_ENV=production node --inspect=0.0.0.0 --optimize_for_size --max_old_space_size=460 dist/infra/cluster.js",
    "start:queue": "NODE_ENV=production node --optimize_for_size --max_old_space_size=460 dist/infra/queue/index.js",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "test:watch": "NODE_ENV=test vitest",
    "db:deploy": "yarn prisma migrate deploy",
    "db:seed": "tsx src/infra/prisma/seed.ts",
    "db:migrate": "yarn prisma migrate dev",
    "db:generate": "yarn prisma generate",
    "db:client": "yarn prisma studio",
    "db:pull": "yarn prisma db pull",
    "prepare": "husky install",
    "format:fix": "biome format --write src/",
    "check:fix": "biome check --fix src/",
    "lint:fix": "biome lint --fix src/",
    "format": "biome format src/",
    "check": "biome check src/",
    "lint": "biome lint src/",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "biome check --write",
      "git add"
    ]
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-errors": "^3.1.1",
    "fastify": "^3.29.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.25",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^0.34.6",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.0.3",
    "prisma": "^5.10.2",
    "standard-version": "^9.5.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "4.8.4",
    "vitest": "^0.34.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
