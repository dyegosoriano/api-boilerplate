{
  "name": "api-boilerplate",
  "version": "1.2.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev:server": "tsx watch --ignore ./node_modules src/infra/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "prestart": "yarn prisma migrate dev",
    "start": "NODE_ENV=production node --inspect=0.0.0.0 dist/infra/server.js",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "test:watch": "NODE_ENV=test vitest",
    "db:migrate": "yarn prisma migrate dev",
    "db:seed": "tsx src/infra/prisma/seed.ts",
    "db:pull": "yarn prisma db pull",
    "prepare": "husky install",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn vitest run --coverage",
      "eslint --cache --quiet --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "fastify": "^3.29.0",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "uuid": "^9.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/node": "^7.20.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitest/coverage-c8": "^0.30.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prisma": "^4.6.1",
    "standard-version": "^9.5.0",
    "tsx": "^3.12.5",
    "typescript": "^4.8.4",
    "vitest": "^0.30.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
