{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",

  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:", "!@modules/**", "!@shared/**", "!@infra/**", "!@core/**"],
              [":NODE:", ":BUN:", ":URL:"],
              ":BLANK_LINE:",
              "@modules/**",
              ":BLANK_LINE:",
              "@shared/**",
              ":BLANK_LINE:",
              "@infra/**",
              ":BLANK_LINE:",
              "@core/**",
              ":BLANK_LINE:",
              [":PATH:"]
            ]
          }
        }
      }
    },
    "enabled": true
  },

  "files": {
    "includes": ["src/**/*", "*.ts", "*.js"]
  },

  "formatter": {
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineEnding": "lf",
    "indentWidth": 2,
    "lineWidth": 140,

    "enabled": true
  },

  "javascript": {
    "parser": { "unsafeParameterDecoratorsEnabled": true },
    "formatter": {
      "arrowParentheses": "asNeeded",
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "complexity": { "noUselessConstructor": "off", "noExtraBooleanCast": "off" },
      "correctness": { "noUnusedVariables": "error", "noVoidTypeReturn": "off" },
      "style": { "noUnusedTemplateLiteral": "error", "useConst": "error" },
      "suspicious": { "noArrayIndexKey": "warn", "noExplicitAny": "warn" },
      "recommended": true
    }
  }
}
